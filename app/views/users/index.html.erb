  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= image_tag(user.avatar.thumb.url) %></td>
    <td><%= user.username %></td>
    <td><%= user.name %></td>
    <td><%= user.passwd %></td>
    <td><%= user.email %></td>
    <td><%= user.domain %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

